{
  "manifest_version": 3,
  "name": "ChromaVault - Advanced Color Picker",
  "version": "1.0.0",
  "description": "Pick colors, name them, and build your persistent color history.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ChromaVault",
    "default_icon": {
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "128": "icons/icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/icon.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}